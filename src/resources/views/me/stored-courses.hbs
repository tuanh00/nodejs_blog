<form class="mt-4" name="container-form" method="POST" action="/courses/handle-form-actions">
  <div>
    <h2>Stored Courses</h2>
    <a href="/me/trash-courses" class="btn btn-link">Trash</a>  {{!-- <-- absolute path --}}
  </div>

  <div class="mt-4 d-flex align-items-center">
    <div class="form-check">
      <input class="form-check-input" type="checkbox" value="" id="checkbox-all">
      <label class="form-check-label mx-2" for="checkbox-all">
        Select All
      </label>
    </div>
    <select id="bulk-actions" name="action" class="form-control form-control-sm w-50 w-md-25" required>
      <option value="">-- Select an action --</option>
      <option value="delete">Delete</option>
    </select>

    <button type="submit" class="btn btn-primary btn-apply btn-sm mx-3">Apply</button>
  </div>
  <table class="table">
    <thead>
      <tr>
        <th class="text-center"></th>
        <th> Order {{{ sortable '_id' _sort}}} </th>
        <th> Title {{{ sortable 'name' _sort}}} </th>
        <th> Created At {{{ sortable 'createdAt' _sort}}} </th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      {{#each courses}}
        <tr>
          <td>
            <div class="form-check">
              <input class="form-check-input" type="checkbox" name="courseIds[]" value="{{this._id}}">
            </div>
          </td>
          <td>{{this._id}}</td>
          <td>{{this.name}}</td>
          <td>{{this.createdAt}}</td>
          <td>
            <a href="/courses/{{this._id}}/edit" class="btn btn-link">Update</a>
            <button
              type="button"
              class="btn btn-link"
              data-bs-toggle="modal"
              data-bs-target="#deleteModal"
              data-id="{{this._id}}"
              data-name="{{this.name}}"
            >Delete</button>
          </td>
        </tr>
      {{else}}
        <tr>
          <td colspan="4" class="text-center">
            You haven't created any courses yet.
            <a href="/courses/create" class="btn btn-link">Create one</a>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</form>

<div id="deleteModal" class="modal fade" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Confirm Deletion</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <p>Are you sure you want to delete <strong id="courseName"></strong>?</p>
      </div>
      <div class="modal-footer">
        <button id="btn-delete-course" type="button" class="btn btn-danger">Delete</button>
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>

<form name="delete-course-form" method="POST">
  <input type="hidden" name="_method" value="DELETE">
</form>

<script>
document.addEventListener('DOMContentLoaded', function () {
  const deleteModal   = document.getElementById('deleteModal');
  const deleteForm    = document.forms['delete-course-form'];
  var containerForm = document.forms['container-form'];
  const btnDelete     = document.getElementById('btn-delete-course');
  const courseNameEl  = document.getElementById('courseName');
  let currentId = null;
  var checkboxAll = $('#checkbox-all');
  var courseItemCheckbox = $('input[name="courseIds[]"]');
  var btnApply = $('.btn-apply');


  checkboxAll.change(function() {
    var isCheckedAll = $(this).prop('checked');
    courseItemCheckbox.prop('checked', isCheckedAll);
    renderApplyButtonState();               
  });

 
  btnApply.on('submit', function (e) {
    if ($(this).prop('disabled') || !$('#bulk-actions').val()) {
      e.preventDefault();
      return;
    }
  });

  function renderApplyButtonState() {
    const isAnyChecked = courseItemCheckbox.filter(':checked').length;
    console.log(isAnyChecked);
    btnApply.prop('disabled', !isAnyChecked);
  }

  renderApplyButtonState();

  //Each item toggle
  courseItemCheckbox.change(function() {
    var isCheckedAll = courseItemCheckbox.length === courseItemCheckbox.filter(':checked').length;
    checkboxAll.prop('checked', isCheckedAll);
    renderApplyButtonState(); // Update the apply button state
  });

  deleteModal.addEventListener('show.bs.modal', function (event) {
    const trigger = event.relatedTarget;
    currentId = trigger.getAttribute('data-id');
    courseNameEl.textContent = trigger.getAttribute('data-name') || '';
  });

  btnDelete.addEventListener('click', function () {
    if (!currentId) return;
    deleteForm.action = `/courses/${currentId}?_method=DELETE`; // soft delete
    deleteForm.submit();
  });
});
</script>
