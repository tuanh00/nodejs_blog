<div class="mt-4">
    <h2>Stored Courses</h2>
    <table class="table">
        <thead>
            <tr>
                <th>Order</th>
                <th>Title</th>
                <th>Created At</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {{#each courses}}
            <tr>
                <td>{{sum @index 1}}</td>
               <td>{{this.name}}</td>
               <td>{{this.createdAt}}</td>
               <td>
                    <a href="/courses/{{ this._id }}/edit" class="btn btn-link">Update</a>
                    <a href="/courses/{{ this._id }}/delete" class="btn btn-link">Delete</a>
               </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>